{
  "servers": {
        // Option 1: UV (local development)
    "as-help-mcp-uv": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "./as-help-mcp",
        "as-help-server",
        "--help-root",
        "C:\\Program Files (x86)\\BRAutomation\\AS6\\Help-en\\Data",
        "--db-path",
        "..\\data\\as6\\.ashelp\\search.db",
        "--metadata-dir",
        "..\\data\\as6\\.ashelp_metadata",
        "--as-version",
        "6"
      ]
    },
     "as-help-local": {
          // Option 2: Docker Compose (local build)
       "command": "docker",
       "args": [
         "compose", 
         "run", "--rm", "-T",
         "-v", "/mnt/c/Program Files (x86)/BRAutomation/AS6/Help-en/Data:/data/help:ro",
         "-e", "AS_HELP_FORCE_REBUILD=false",
         "-e", "AS_HELP_VERSION=6",
         "as-help-local"
       ]
     },
     "as-help-prod": {
          // Option 3: Docker (production image from GitHub Container Registry)
      "command": "docker",
      "args": [
        "run", "--rm", "-i",
        "-v", "/mnt/c/Program Files (x86)/BRAutomation/AS6/Help-en/Data:/data/help:ro",
        "-v", "ashelp-data:/data/db",
        "-e", "AS_HELP_FORCE_REBUILD=false",
        "-e", "AS_HELP_VERSION=6",
        "ghcr.io/brdk-public/as-help-mcp:latest"
      ]
    } 
  }
}
